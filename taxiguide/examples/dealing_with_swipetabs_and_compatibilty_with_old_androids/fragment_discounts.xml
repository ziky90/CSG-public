<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"  
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/discounts">

<ListView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/discounts_panel"
    android:background="@color/white"
    android:clickable="false"
    android:divider="@color/dark_gray"
    android:dividerHeight="1dp"
    android:drawSelectorOnTop="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:listSelector="@android:color/transparent" >

</ListView>
<TextView 
    android:id="@+id/text_no_discounts"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:text="@string/no_discounts"
    android:visibility="gone"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/discounts_panel"
    android:layout_alignParentBottom="true"
    android:paddingBottom="5dp">
    
    <Button
        	android:id="@+id/button_discounts_add"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_centerHorizontal="true"
        	android:onClick="addDiscount"
        	android:text="@string/add_new"
        	android:background="@drawable/button_general"
        	style="@style/ButtonText" 
        	
        >
        	<requestFocus />
		</Button>
    
</RelativeLayout>

</RelativeLayout>